%h1 team: #{@team.name}

%h2 members

%ul
  - @team.users.each do |user|
    %li
      = user.email
      &mdash;
      = Message.where(user_id: user.id, team_id: @team.id).newest_first.first.try(:content)

%p= link_to "create a message", new_team_message_path(@team)

%h2 messages

= render :partial => "messages/list", :locals => { :messages => @messages }

%p= link_to "create a message", new_team_message_path(@team)

%p= link_to "back to teams", teams_path
